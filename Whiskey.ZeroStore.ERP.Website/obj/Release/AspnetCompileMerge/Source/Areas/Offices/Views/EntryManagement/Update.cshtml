    function dataValiPost() {
        var errcou = 0;
        var da = [];
        var MemberId = $(".personnel #MemberId ").val();
        var name = $(".personnel #RealName ").val();
        if (name.trim().length == 0) {

            $(".personnel #RealName ").css({ "border": "2px solid  #e5603b" }).attr("title", "请选择会员");
            errcou += 1;
        }
        else {
            $(".personnel #RealName").css({ "border": "" });
            da.push({ "MemberId": MemberId });
        }

        da.push({ "Id": $(".personnel #Id").val() });
        var MacAddress = $(".personnel #MacAddress").val();
        if (MacAddress.trim().length == 0) {
            $(".personnel #MacAddress ").css({ "border": "2px solid  #e5603b" }).attr("title", "请输入Mac地址");
            errcou += 1;
        }
        else {
            $(".personnel #MacAddress").css({ "border": "" });
            da.push({ "MacAddress": MacAddress });
        }
        var InterviewEvaluation = $(".modal-dialog #InterviewEvaluation").val();
        if (InterviewEvaluation.trim().length == 0) {
            $(".personnel #InterviewEvaluation ").css({ "border": "2px solid  #e5603b" }).attr("title", "请填写面试评价");
            errcou += 1;
        }
        else {
            $(".modal-dialog #InterviewEvaluation").css({ "border": "" });
            da.push({ "InterviewEvaluation": InterviewEvaluation });
        }

        var BankcardImgPath = $(".personnel #BankcardImgPath").attr("src");
            da.push({ "BankcardImgPath": BankcardImgPath });

        var IdCardImgPath = $(".personnel #IdCardImgPath").attr("src");
            da.push({ "IdCardImgPath": IdCardImgPath });

        var HealthCertificateImgPath = $(".personnel #HealthCertificateImgPath").attr("src");
            da.push({ "HealthCertificateImgPath": HealthCertificateImgPath });

        var PhotoImgPath = $(".personnel #PhotoImgPath").attr("src");
            da.push({ "PhotoImgPath": PhotoImgPath });
        if (errcou == 0) {
            return { error: 0, data: da };
        }
        else {

            return { error: 1 }
        }
    }
