
<div id="app">

    <div class="row">
        <div class="panel panel-search">
            <div class="panel-heading clearfix">
                <div class="col-md-4 panel-title">
                    <h5><i class="fa fa-search"></i> <span>查询条件</span></h5>
                </div>
                <div class="col-md-8 text-right">
                    <input class="switcher" type="checkbox" data-class="switcher-default" checked="checked">
                </div>
            </div>
            <div class="panel-body">
                <form class="form-horizontal form-search">
                    <div class="col-md-4">
                        <div class="form-group no-margin-hr">
                            <label class="control-label col-md-4">试卷名</label>
                            <div class="col-md-8">
                                <input v-on:keyup.enter="search(null)" class="form-control" type="text" name="Name" id="Name" placeholder="请输入试卷名" />

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group no-margin-hr">
                            <label class="control-label col-md-5">创建日期：</label>
                            <div class="col-md-7">
                                <div class="input-daterange input-group">
                                    @Html.TextBox("StartDate", "", new { @class = "start-date input-sm form-control", @placeholder = "开始日期" })
                                    <span class="input-group-addon">至</span>
                                    @Html.TextBox("EndDate", "", new { @class = "end-date input-sm form-control", @placeholder = "结束日期" })
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
            <div class="panel-footer text-right clearfix ">

                <div class="pull-left">
                    <button v-on:click="search(null)" title="按条件搜索数据" type="button" class="btn btn-primary btn-padding-right"><i class="fa fa-search"></i> <span>搜索</span></button>
                    <button v-on:click="document.querySelector('.form-search').reset()" title="重置搜索栏的各项输入" type="button" class="btn btn-danger btn-padding-right"><i class="fa fa-refresh"></i> <span>清除</span></button>
                </div>

                <div class="pull-right">
                    <div class="button-normal">
                        <button id="Create" v-on:click="add" title="创建一条新数据" type="button" class="btn btn-success btn-padding-right"><i class="fa fa-plus"></i> <span>新增数据</span></button>
                        <button id="Print" title="打印预览" type="button" class="btn btn-facebook btn-padding-right"><i class="fa fa-print"></i> <span>打印预览</span></button>
                        <button id="Export" title="导出文件" type="button" class="btn btn-warning btn-padding-right"><i class="fa fa-save"></i> <span>导出文件</span></button>
                        <button id="RemoveAll" title="将选择的项移至回收站" type="button" class="btn btn-danger btn-padding-right"><i class="fa fa-remove"></i> <span>移除所选</span></button>
                    </div>
                    <div class="button-recycle">

                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="panel panel-list">
            <div class="panel-heading clearfix">
                <div class="col-md-4 panel-title">
                    <h5><i class="fa fa-list"></i> <span>数据列表</span></h5>
                </div>
                <div class="col-md-8 text-right">
                    <span><input v-on:change="toggleEnable" class="enabler" type="checkbox" data-class="switcher-default" v-bind:checked="isEnabled"></span>
                </div>
            </div>
            <table class="table table-list table-hover valign-middle" width="100%">
                <thead>
                    <tr>
                        <th><label>全选 <input type="checkbox" style="display:none;" v-model="checkAll" /> </label></th>
                        <th>编号</th>
                        <th>试卷名称</th>
                        <th>总分</th>
                        <th>题目数量</th>
                        <th>及格线</th>
                        <th>奖励积分</th>
                        <th>创建时间</th>
                        <th>创建人</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="(item,index) in pageDatas">
                        <td><input type="checkbox" class="" v-bind:value="item.Id" v-model="item.IsChecked" /></td>
                        <td>{{index+1}}</td>
                        <td>{{item.Name}}</td>
                        <td>{{item.TotalScore}}</td>
                        <td>{{item.QuestionCount}}</td>
                        <td>{{item.PassLine}}</td>
                        <td>{{item.RewardMemberScore}}</td>
                        <td>{{item.CreatedTime|datetime}}</td>
                        <td>{{item.MemberName}}</td>
                        <td>
                            <button title="查看详细信息" v-on:click="view(item.Id)" class="btn-opt-box"><i class="btn-view-icon"></i></button>
                            <button title="禁用数据" v-if="item.IsEnabled" v-on:click="disable(item.Id)" class="btn-opt-box"><i class="btn-disable-icon"></i></button>
                            <button title="启用数据" v-if="!item.IsEnabled" v-on:click="enable(item.Id)" class="btn-opt-box"><i class="btn-enable-icon"></i></button>
                            <button title="修改数据" v-if="item.IsEnabled" v-on:click="edit(item.Id)" class="btn-opt-box"><i class="btn-setting-icon"></i></button>
                            <button title="设置题目" type="button" v-on:click="setupQuestion(item.Id,item.QuestionIds)" class="btn-opt-box"><i class="btn-setting-topic-icon"></i></button>
                        </td>

                    </tr>
                </tbody>
            </table>
            <my-page v-bind:current="pageInfo.pageIndex"
                     v-bind:total="pageInfo.totalCount"
                     v-bind:page-size="pageInfo.pageSize"
                     v-bind:page-size-opts="[10,20]"
                     @@on-change="changePage"
                     @@on-page-size-change="changePageSize">
            </my-page>
        </div>
    </div>
    <div class="row">
        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-lg" role="document" style="width:1000px;">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">设置题目</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <question-list ref="child" v-bind:checked-ids="checkedIds" v-bind:id="currentId"></question-list>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" v-on:click="save">保存</button>
                        <button type="button" class="btn btn-success" data-dismiss="modal">关闭</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

<template id="tmp-question-list">
    <div class="row">
        <div class="panel panel-list">
            <div class="panel-heading clearfix">
                <div class="col-md-4 panel-title">
                    <h5><i class="fa fa-list"></i> <span>数据列表 已勾选: {{checkedIds.length}}</span></h5>
                </div>
                <div class="col-md-8 text-right">

                </div>
            </div>
            <table class="table table-list table-hover valign-middle" width="100%">
                <thead>
                    <tr>
                        <th><label>全选<input type="checkbox" style="display:none;" v-model="checkAll" /> </label></th>
                        <th>编号</th>
                        <th>标题</th>
                        <th>分值</th>
                        <th>类型</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="(item,index) in pageDatas">
                        <td><input type="checkbox" class="form-control" v-bind:value="item.Id" v-model="checkedIds" /></td>
                        <td>{{index+1}}</td>
                        <td>{{item.Title}}</td>
                        <td>{{item.Score}}</td>
                        <td>{{item.IsMulti?"多选":"单选"}}</td>
                    </tr>
                </tbody>
            </table>
            <my-page v-bind:current="pageInfo.pageIndex"
                     v-bind:total="pageInfo.totalCount"
                     v-bind:page-size="pageInfo.pageSize"
                     v-bind:page-size-opts="[5,10,20]"
                     @@on-change="changePage"
                     @@on-page-size-change="changePageSize">
            </my-page>
        </div>

    </div>
</template>

@{
    Html.RenderPartial("Page", null);
}
<script>

    var baseUrl = '/Offices/Exam';

    Vue.component('question-list', {
        template: '#tmp-question-list',
        data: function () {
            return {
                pageDatas: [], //分页数据
                isDeleted: false,
                isEnabled: true,
                pageInfo: {
                    pageIndex: 1,
                    pageSize: 5,
                    pageCount: 0,
                    totalCount: 0
                }
            }
        },
        mounted: function () {

        },
        methods: {
            search: function (filter) {
                var _self = this;

                var searchData = {
                    pageIndex: this.pageInfo.pageIndex,
                    pageSize: this.pageInfo.pageSize,
                }

                if (filter) {

                    searchData = _.extend(searchData, filter)
                }

                $.getJSON(baseUrl + '/GetQuestions', searchData).done(function (res) {
                    if (res.ResultType !== 3) {
                        //console
                        return;
                    }
                    var pageInfo = res.Data.pageInfo;
                    var pageData = res.Data.pageData;
                    _self.pageDatas = pageData;
                    _self.pageInfo = pageInfo;
                })
            },
            changePage: function (page) {
                this.pageInfo.pageIndex = page;
                this.search();
            },
            changePageSize: function (newSize) {
                this.pageInfo.pageSize = newSize;
                this.pageInfo.pageIndex = 1;
                this.search();
            },

        },
        props: {
            id: {
                type: Number,
                default: 0
            },
            checkedIds: {
                type: Array,
                default: []
            }

        },
        computed: {
            checkAll: {
                get: function () {

                    var ids = this.pageDatas.map(function (x) { return x.Id });
                    if (_.intersection(ids, this.checkedIds).length == ids.length) {
                        return true;
                    }
                    return false;
                },

                set: function (value) {
                    var _self = this;
                    if (value) {
                        _.forEach(this.pageDatas, function (n) {
                            if (_self.checkedIds.indexOf(n.Id) < 0) {
                                _self.checkedIds.push(n.Id)
                            }
                        })
                    }
                    else {
                        // 移除当前页的所有选中
                        _self.pageDatas.forEach(function (item) {
                            let index = _self.checkedIds.findIndex(x => x == item.Id)
                            if (index >= 0) {
                                _self.checkedIds.splice(index, 1)
                            }

                        })
                    }


                }
            }
        },
        watch: {
            id: function (val) {
                this.search();
            }
        }

    })
    var vm = new Vue({
        el: "#app",
        data: {
            isDeleted: false,
            isEnabled: true,
            numbers: [],
            pageDatas: [], //分页数据
            currentId: 0,
            pageInfo: {
                pageIndex: 1,
                pageSize: 10,
                pageCount: 0,
                totalCount: 0
            },
            checkedIds: [],
            currentId: 0
        },
        mounted: function () {
            this.search();

        },
        methods: {

            setupQuestion: function (id, ids) {

                // 保存当前选择的examId
                this.currentId = id;
                this.checkedIds = ids;

                $("#myModal").modal('show');
            },
            toggleEnable: function () {
                this.isEnabled = !this.isEnabled;
                this.search({ isEnbled: this.isEnabled })
            },
            search: function (filter) {

                var _self = this;

                var searchData = {

                    pageIndex: this.pageInfo.pageIndex,
                    pageSize: this.pageInfo.pageSize,


                }
                var startDate = $("#StartDate").val();
                var endDate = $("#EndDate").val();
                var name = $("#Name").val();
                if (startDate) {
                    searchData.startDate = startDate;
                }
                if (endDate) {
                    searchData.endDate = endDate;
                }
                if (name && name.length > 0) {
                    searchData.name = name;

                }
                if (filter) {

                    searchData = _.extend(searchData, filter)
                }

                $.getJSON(baseUrl + '/List', searchData).done(function (res) {
                    if (res.ResultType !== 3) {
                        //console
                        return;
                    }
                    var pageInfo = res.Data.pageInfo;
                    var pageData = res.Data.pageData;
                    //判断是否已在列表中

                    _self.pageDatas = pageData;
                    _self.pageInfo = pageInfo;
                })
            },
            add: function () {
                var _self = this;
                var dialog = new $.whiskey.web.ajaxDialog({
                    caption: "添加数据",
                    actionUrl: "@Url.Action("Create")",
                    lockButton: $(this),
                    formValidator: function () {
                        var $form = $(".modal-form");
                        if (!$form.valid()) {
                            return false;
                        } else {
                            return true;
                        }
                    },
                    postComplete: function () {
                        _self.search();
                        return true;
                    },
                });
            },
            edit: function (id) {
                 var _self = this;
                   var dialog = new $.whiskey.web.ajaxDialog({
                    caption: "添加数据",
                    actionUrl: "@Url.Action("Update")",
                    lockButton: $(this),
                    getParams: { Id:id},
                    formValidator: function () {
                        var $form = $(".modal-form");
                        if (!$form.valid()) {
                            return false;
                        } else {
                            return true;
                        }
                    },
                    postComplete: function () {
                        _self.search();
                        return true;
                    },
                });
            },
            view: function (id) {
                var _self = this;
                var dialog = new $.whiskey.web.ajaxView({
                    caption: "查看数据",
                    actionUrl: "@Url.Action("View")",
                    lockButton: $(this),
                    params: { Id:id}

                });
            },
            disable: function (id) {
                var _self = this;
                var confirm = new $.whiskey.web.ajaxConfirm({
                    question: "确认要禁用这条数据吗？",
                    notes: "提示：禁用后数据将不在其他任何地方使用",
                    actionUrl: "@Url.Action("Disable")",
                    params: { Id: id },
                    lockButton:null,
                    complete: function () {
                        _self.search();
                    }
                });
            },
            enable: function (id) {
                 var _self = this;
                var confirm = new $.whiskey.web.ajaxConfirm({
                    question: "确认要启用这条数据吗？",
                    notes: "",
                    actionUrl: "@Url.Action("Enable")",
                    params: { Id: id },
                    lockButton:null,
                    complete: function () {
                        _self.search();
                    }
                });
            },
            toggleEnable: function () {
                this.isEnabled = !this.isEnabled;
                this.search({ isEnabled: this.isEnabled })
            },

            changePage: function (page) {
                this.pageInfo.pageIndex = page;
                this.search();
            },
            changePageSize: function (newSize) {

                this.pageInfo.pageSize = newSize;
                this.pageInfo.pageIndex = 1;
                this.search();
            },
            save: function () {
                var _self = this;
                var id = this.currentId;
                var ids = this.$refs.child.checkedIds;

                $.post(baseUrl + '/SetupQuestion', { examId: id, questionIds: ids })
                    .done(function (res) {
                        if (res.ResultType === 3) {
                            $("#myModal").modal('hide');
                            _self.search(null);
                        }
                        else {
                            alert(res.Message)
                        }
                    })
            }
        },
        computed: {

            checkAll: {
                get: function () {
                    if (_.some(this.pageDatas, { 'IsChecked': false })) {
                        return false;
                    }
                    return true;
                },

                set: function (value) {
                    _.forEach(this.pageDatas, function (n) { n.IsChecked = value })

                }
            }
        }
    })
</script>