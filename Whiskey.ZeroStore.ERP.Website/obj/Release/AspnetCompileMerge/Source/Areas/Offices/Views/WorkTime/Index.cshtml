                    "sTitle": "工作时长",
                    "bSortable": false,
                    "sName": "WorkHour",
                    "mData": function (data) {
                        return data.WorkHour + "小时";
                    },
                },
                {
                    "sTitle": "控制操作",
                    "bSortable": false,
                    "bSearchable": false,
                    "mData": function (data) {
                        var controller = $.whiskey.datatable.controller(data);
                        return controller;
                    }
