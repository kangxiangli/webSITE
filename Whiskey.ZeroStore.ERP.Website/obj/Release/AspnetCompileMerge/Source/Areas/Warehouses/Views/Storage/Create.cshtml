    <div class="col-md-6">
        <input type="checkbox" value="false" id="IsEnabled" name="IsEnabled" class="form-control" />
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-4 checkbox-inline">
        @Html.DisplayNameFor(m => m.IsOrderStorage)：
    </label>
    <div class="col-md-6">
        <input type="checkbox" value="false" id="IsOrderStorage" name="IsOrderStorage" class="form-control" />
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-4">
        @Html.DisplayNameFor(m => m.IsDefaultStorage)：
    </label>
    <div class="col-md-6">
        <input type="checkbox" value="false" id="IsDefaultStorage" name="IsDefaultStorage" class="form-control" />
