    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-4">
        @Html.DisplayNameFor(m => m.Description)：
    </label>
    <div class="col-md-6">
        <textarea name="Description" id="Description" class="form-control"></textarea>
    </div>
</div>
