    <div class="col-md-6">
        <input type="checkbox" value="false" id="IsPublicInfo" name="IsPublicInfo" class="form-control" />
    </div>
</div>

<script>
    
    $(function () {
        $(".selectpicker").selectpicker();
        $(".storage-create #StoreId").queryManageStore();
        $(":checkbox").click(function () {
            if ($(this).is(":checked")) {
                $(this).val("true");
            }
            else {
                $(this).val("false");
            }
        });
    })
</script>