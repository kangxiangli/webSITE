                        return $.whiskey.datatable.tplListCheckbox(data.Id);
                    }
                },
                {
                    "sTitle": "商品条码",
                    "bSortable": false,
                    "sName": "ProductName",
                    "mData": function (data) {
                        return data.ProductBarcode;
                    }

                },
                {
                    "sTitle": "品牌",
                    "bSortable": false,
                    "sName": "Brand",
                    "mData": function (data) {
                        return data.Brand;
                    }
                },
                {
                    "sTitle": "尺码",
                    "bSortable": false,
                    "sName": "Size",
                    "mData": function (data) {
                        return data.Size;
                    }
                },
                {
                    "sTitle": "季节",
                    "bSortable": false,
                    "sName": "Season",
                    "mData": function (data) {
                        return data.Season;
                    }
                },
                {
                    "sTitle": "颜色",
                    "bSortable": false,
                    "sName": "Color",
                    "mData": function (data) {
                        return data.Color;
                    }
                },
                {
                    "sTitle": "图片",
                    "sName": "Thumbnail",
                    "bSortable": false,
                    "bSearchable": false,
                    "mData": function (data) {
                    return "<div class='thumbnail-img_five_box'><div class='thumbnail-img_five'><div class='thumbnail-img_f'><img class='popimg' src='" + data.Thumbnail + "'/>";
                    	
                    }
                },
                {
                    "sTitle": "操作",
                    "sName": "Access",
                    "mData": "",
                    "bSortable": false,
                    "bSearchable": false,
                    "mData": function (data) {
