                     "mData": function (data) {
                         return data.Quotiety;
                     },
                 },
                {
                    "sTitle": "更新时间",
                    "bSortable": false,
                    "sName": "UpdatedTime",
                    "mData": function (data) {
                        return $.whiskey.tools.dateFormat(data.UpdatedTime, "yyyy-MM-dd HH:mm");
                    }
                },
                {
                    "sTitle": "操作人员",
                    "bSortable": false,
                    "sName": "AdminName",
                    "mData": function (data) {
                        return data.AdminName;
                    },
                },
                {
                    "sTitle": "部门",
                    "bSortable": false,
                    "sName": "AdminName",
                    "mData": function (data) {
                        return data.DepartmentName;
                    },
                },
                {
                    "sTitle": "店铺",
                    "bSortable": false,
                    "sName": "AdminName",
                    "mData": function (data) {
                        return data.StoreName;
                    },
                }
                //,
