<style>
	.skinBox{
		padding: 20px 30px 0 0;
	}
	.template-skins a.col-sm-2{
		background: transparent;
	}
	.template-skins a img{
		
		width: 100%;
	}
	.template-skins .template-skin-active img{
		border: 3px dotted #FFF;
	}
</style>

@section Scripts{
<script>
    var skin_init
	if(localStorage.skin_init){
        skin_init = localStorage.skin_init;
        console.log(skin_init)
		$('.template-skins').find('a[data-skin='+ skin_init +']').addClass('template-skin-active')
        $('body').attr('id', skin_init);
         
        $('body').css({
        	'background-size': 'cover',
        	'background-repeat': 'no-repeat',
    	    'background-position': 'center',
    	    'background-attachment': 'fixed'
        });
        $('.body-cover').css('background', 'none');
    }


    $('.template-skins > a').on('click',function (e) {
        e.preventDefault();
        $('.template-skin-active').removeClass('template-skin-active')
        $(this).addClass('template-skin-active')
        var skin = $(this).data('skin');   
        $('body').attr('id', skin);
        $('#changeSkin').modal('hide');
        $('body').css({
        	'background-size': 'cover',
        	'background-repeat': 'no-repeat',
    	    'background-position': 'center',
    	    'background-attachment': 'fixed'
        });
        $('.body-cover').css('background', 'none');
    	localStorage.setItem("skin_init",skin);
    });
    $('.template-skins > a').hover(function (e) {
    	$(this).css({
    		'transition':'.5s all',
    		'transform':'scale(1.5,1.5)',
    		'zIndex':'1000'
    	})
    },function(){
    	$(this).css({
    		'transform':'scale(1,1)',
    		'zIndex':'1'
    	})
    });
</script>
}