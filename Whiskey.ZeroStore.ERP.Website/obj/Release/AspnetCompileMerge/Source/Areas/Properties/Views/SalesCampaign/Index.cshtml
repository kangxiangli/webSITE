                        "sName": "BrandName",
                        "mData": function (data) {
                            return $.whiskey.tools.dateFormat(data.CampaignEndTime, "yyyy-MM-dd HH:mm");

                        }

                    },
                    {
                        "sTitle": "是否已过期",
                        "bSortable": false,
                        "sName": "BrandName",
                        "mData": function (data) {
                            return data.IsPass ? "<span style='color: #5ebd5e'>已过期</span>" : "<span style='color:green'>未过期</span>";

                        }
                    },
