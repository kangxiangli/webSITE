        }
        function Remove(sender, id) {
            var confirm = new $.whiskey.web.ajaxConfirm({
                question: "确认要移除该活动至回收站吗？",
                notes: "提示：移除后可以再次启用该活动",
                actionUrl: "@Url.Action("Remove")",
                params: { ids: [id] },
                lockButton: $(sender),
                complete: function (da) {
                    if (da.ResultType == 3) {
                        $.whiskey.web.alert({
                            type: "success",
