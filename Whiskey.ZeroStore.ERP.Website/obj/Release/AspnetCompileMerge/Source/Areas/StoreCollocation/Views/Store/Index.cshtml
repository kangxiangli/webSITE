                layer.open({
                    type: 2,
                    title: false,
                    area: ['40%', '78%'],
                    shade: 0.8,
                    closeBtn: 0,
                    shadeClose: true,
                    content: '/StoreCollocation/Store/ShowImg?img=' + imgpath
                });
