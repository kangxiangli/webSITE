
<style>
    .activeDate {
        background-image: url("/Content/Images/themes/dh.png");
        background-repeat: no-repeat;
        background-size: 70% 70%;
        background-position: 11px 7px;
    }
</style>
<div class="form-group">
    <label class="control-label col-md-3">
        答题冷却时间 :
    </label>
    <div class="col-md-4" style="display: flex;height: 32px;line-height: 32px;">
        <input type="text" maxlength="3" style=" margin-right: 15px;" value="@ViewBag.AnswerTime" onkeyup="if(this.value.length==1){this.value=this.value.replace(/[^0-9]/g,'')}else{this.value=this.value.replace(/\D/g,'')}" onafterpaste="if(this.value.length==1){this.value=this.value.replace(/[^0-9]/g,'')}else{this.value=this.value.replace(/\D/g,'')}" class="form-control" id="answerTime" />
        <select id="unitOfTime" class="form-control">
            <option value="ss">秒</option>
            <option value="mm">分</option>
            <option value="hh">时</option>
        </select>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#unitOfTime").val("@ViewBag.UnitOfTime");
    })
</script>


<script>
    // selectpicker 初始化
    $(function () {
        $('#unitOfTime').selectpicker();
        $('#unitOfTime').selectpicker('refresh');
    })
</script>