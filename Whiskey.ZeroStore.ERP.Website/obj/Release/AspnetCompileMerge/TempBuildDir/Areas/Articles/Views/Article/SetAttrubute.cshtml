@using Whiskey.ZeroStore.ERP.Models
@using Whiskey.ZeroStore.ERP.Transfers.Enum.Base
@model Article

<script type="text/javascript" src="/content/editor/kindeditor-min.js"></script>
<script type="text/javascript" src="/content/editor/lang/zh_CN.js"></script>

<script src="/content/scripts/jquery/jquery.ztree.core-3.5.min.js"></script>
<script src="/content/scripts/jquery/jquery.ztree.excheck-3.5.js"></script>
 
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.VerifyType) :
    </label>
    <div class="col-md-6">
        <select id="ApprovalStatus" name="ApprovalStatus" class="form-control">
            <option value="@((int)VerifyFlag.Pass)" selected="selected">通过</option>
            <option value="@((int)VerifyFlag.Verifing)">审核中</option>
        </select>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.IsTop) :
    </label>
    <div class="col-md-1">
        @Html.TextBoxFor(m => m.IsTop, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.IsRecommend) :
    </label>
    <div class="col-md-1">
        @Html.CheckBoxFor(m => m.IsRecommend, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.IsHot) :
    </label>
    <div class="col-md-1">
        @Html.CheckBoxFor(m => m.IsHot, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.IsShow) :
    </label>
    <div class="col-md-1">
        @Html.CheckBoxFor(m => m.IsShow, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.Hits) :
    </label>
    <div class="col-md-6">
        @Html.TextBoxFor(m => m.Hits, new { @class = "form-control" })
    </div>
</div>
<input type="hidden" id="ids" name="ids" value="" />
<script>
    $(function () {
        var list = $.whiskey.web.getIdByChecked(".table-list td input[type=checkbox]");
        if (list.length > 0) {
            var id="";
            for (var i = 0; i < list.length; i++) {
                id +=list[i].value+","
            }
            $("#ids").attr("value", id);
        }
    });
</script>
<script>
    // selectpicker 初始化
    $(function () {
        $('#ApprovalStatus').selectpicker();
        $('#ApprovalStatus').selectpicker('refresh');
    })
</script>