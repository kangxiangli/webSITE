@using Whiskey.ZeroStore.ERP.Models
@model AppArticle

<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.ArticleTitle) :
    </label>
    <div class="col-md-10">
        @Model.ArticleTitle
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.UpdatedTime) :
    </label>
    <div class="col-md-10">
        @Model.UpdatedTime
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.CreatedTime) :
    </label>
    <div class="col-md-10">
        @Model.CreatedTime
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.IsEnabled) :
    </label>
    <div class="col-md-10">
        @Html.Raw(Model.IsEnabled == true ? "是" : "否")
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.IsDeleted) :
    </label>
    <div class="col-md-10">
        @Html.Raw(Model.IsDeleted == true ? "是" : "否")
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        操作人员 :
    </label>
    <div class="col-md-10">
        @*@Html.Raw(Model.op != null ? Model.Operator.Member.MemberName : "")*@
    </div>
</div>
<div id="myCarousel" class="carousel slide">
    
    <!-- 轮播（Carousel）项目 -->
    <div class="carousel-inner">
        @{
            int index = 0;
            foreach (AppArticleItem item in Model.AppArticleItems)
            {
                if (!string.IsNullOrEmpty(item.ImagePath))
                {
                    string strPath = "https://api.0-fashion.com" + item.ImagePath;
                    if (index == 0)
                    {
                        <div class="item active">
                            <img src="@strPath" alt="First slide" style="width:100%">
                            @*<div class="carousel-caption">标题 1</div>*@
                        </div>
                        index = index + 1;
                    }
                    else
                    {
                        <div class="item">
                            <img src="@strPath" alt="First slide" style="width:100%">
                            @*<div class="carousel-caption">标题 1</div>*@
                        </div>
                    }
                }
            }
        }
        @*<div class="item active">
            <img style="width:100%" src="https://api.0-fashion.com/Content/Article/CoverImages/457212a1ea78c7fa.png" alt="First slide">
        </div>
        <div class="item">
            <img style="width:100%" src="https://api.0-fashion.com/Content/Article/CoverImages/457212a1ea78c7fa.png" alt="Second slide">
        </div>
        <div class="item">
            <img style="width:100%" src="https://api.0-fashion.com/Content/Article/CoverImages/457212a1ea78c7fa.png" alt="Third slide">
        </div>*@
    </div>
    <!-- 轮播（Carousel）导航 -->
    <a class="carousel-control left" style="margin:0 auto" href="#myCarousel" data-slide="prev" ><i class="fa  fa-angle-double-left  fa-4x"></i></a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next"><i class="fa fa-angle-double-right  fa-4x"></i></a>
     
</div>