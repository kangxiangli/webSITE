@using Whiskey.ZeroStore.ERP.Website.Areas.Authorities.Models;
@using Whiskey.ZeroStore.ERP.Models
@using Whiskey.ZeroStore.ERP.Transfers.Enum.Member
@model Administrator

<style>
    ul li {
        list-style-type: none;
    }
    .imgClass {
        width: 100%;
        height: 100%;
    }
</style>
<ul id="myTab" class="nav nav-tabs">
    <li class="active">
        <a href="#baseinfo_tab" data-toggle="tab">
            基本信息
        </a>
    </li>

    <li><a href="#profile_tab" data-toggle="tab">相关证件</a></li>
    <li><a href="#regist_tab" data-toggle="tab">登记表</a></li>
    <li><a href="#labor_contract" data-toggle="tab">劳动合同</a></li>
    <li><a href="#resume" data-toggle="tab">简历</a></li>
</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade in active" id="baseinfo_tab">
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            <label class="control-label col-md-4">
                员工编号 :
            </label>
            <div class="col-md-8">
                @Model.Member.UniquelyIdentifies
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-4">
                员工昵称(登录名) :
            </label>
            <div class="col-md-8">
                @Model.Member.MemberName
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">
                @Html.DisplayNameFor(m => m.Member.Email) :
            </label>
            <div class="col-md-8">
                @Model.Member.Email
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-4">
                @Html.DisplayNameFor(m => m.Member.MobilePhone) :
            </label>
            <div class="col-md-8">
                @Model.Member.MobilePhone
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-4">
                员工姓名 :
            </label>
            <div class="col-md-8">
                @Model.Member.RealName
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-4">
                性别 :
            </label>
            <div class="col-md-8">
                @Html.Raw(Model.Member.Gender == (int)GenderFlag.Male ? "男" : "女")

            </div>
        </div>
        
        <div class="form-group">
            <label class="control-label col-md-4">
                评价 :
            </label>
            <div class="col-md-8">
                @Model.Notes
            </div>
        </div>
       
       
        <div class="form-group">
            <label class="control-label col-md-4">
                入职时间 :
            </label>
            <div class="col-md-8">
                @Model.CreatedTime
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-4">
                @Html.DisplayNameFor(m => m.IsEnabled) :
            </label>
            <div class="col-md-8">
                @Html.Raw(Model.IsEnabled == true ? "是" : "否")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-4">
                @Html.DisplayNameFor(m => m.IsDeleted) :
            </label>
            <div class="col-md-8">
                @Html.Raw(Model.IsDeleted == true ? "是" : "否")
            </div>
        </div>

    </div>

    <div class="tab-pane fade" id="profile_tab">
        
        <div class="form-group">
            <label class="control-label col-md-2">
                银行卡:
            </label>
            <div class="col-md-8">
                <div class="dropzone-box detailImgs" id="BankcardDiv">
                    <img src="@ViewBag.Profile.BankcardImgPath" id="BankcardImgPath" class="imgClass" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                身份证:
            </label>
            <div class="col-md-8">
                <div class="dropzone-box detailImgs" id="IdCardDiv">
                    <img src="@ViewBag.Profile.IdCardImgPath" id="IdCardImgPath" class="imgClass" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                健康证:
            </label>
            <div class="col-md-8">
                <div class="dropzone-box detailImgs" id="HealthCertificateDiv">
                    <img src="@ViewBag.Profile.HealthCertificateImgPath" id="HealthCertificateImgPath" class="imgClass" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                照片:
            </label>
            <div class="col-md-8">
                <div class="dropzone-box detailImgs" id="PhotoDiv">
                    <img src="@ViewBag.Profile.PhotoImgPath" id="PhotoImgPath" class="imgClass" />
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="regist_tab">
        <div class="form-group">
            <label class="control-label col-md-2">
                登记表:
            </label>
            <div class="col-md-8">
                <div class="dropzone-box detailImgs" id="RegistFormDiv">
                    <img src="@ViewBag.Profile.RegistFormPath" id="RegistFormPath" class="imgClass" />
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="labor_contract">
        <div class="form-group">
            <label class="control-label col-md-2">
                劳动合同:
            </label>
            <div class="col-md-8">
                <div class="dropzone-box detailImgs" id="RegistFormDiv">
                    <img src="@ViewBag.Profile.LaborContractImgPath" id="RegistFormPath" class="imgClass" />
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="resume">
        <div class="form-group">
            <label class="control-label col-md-2">
                简历:
            </label>
            <div class="col-md-8">
                <div class="dropzone-box detailImgs" id="RegistFormDiv">
                    <img src="@ViewBag.Profile.ResumeImgPath" id="RegistFormPath" class="imgClass" />
                </div>
            </div>
        </div>
    </div>
</div>