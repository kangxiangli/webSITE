        var attr = $("#hid_attri").val();
        if (attr.length > 0) {  //
            var res = JSON.parse(attr);
            var resu = "";
            for (att in res) {
                resu += "<li><h3><span>" + res[att].name + "</span></h3>";
                var chiul = "<ul>";
                $.each(res[att].child, function (i, v) {
                    chiul += "<li><img src="+v.img+"><span>"+v.name+"</span></li>";
                });
                chiul += "</ul>";
                resu += chiul + "</li>";
            }
            $(".atttir_img").html("").html(resu);
        }
    })
