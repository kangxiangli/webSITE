@using Whiskey.ZeroStore.ERP.Transfers
@model MemberTypeDto
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.MemberTypeName) :
    </label>
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.MemberTypeName, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.MemberTypeDiscount) :
    </label>
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.MemberTypeDiscount, (List<SelectListItem>)ViewBag.Discount, new { @class = "form-control selectpicker", data_live_search="true" })
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.Notes) :
    </label>
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Notes, new { @class = "form-control" })
    </div>
</div>
<script>
    // selectpicker 初始化
    $(function () {
        $('.selectpicker').selectpicker();
    })
</script>