@using Whiskey.ZeroStore.ERP.Models
@model MemberCollocation

<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.CollocationName) :
    </label>
    <div class="col-md-10">
        @Model.CollocationName
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.Member.MemberName) :
    </label>
    <div class="col-md-10">
        @Model.Member.MemberName
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.ColorId) :
    </label>
    <div class="col-md-10">
        @ViewBag.Color
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.ProductAttrId) :
    </label>
    <div class="col-md-10">
        @ViewBag.ProductAttr
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.ProductAttrId) :
    </label>
    <div class="col-md-10">
        @ViewBag.Situation
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        搭配图 :
    </label>
    <div class="col-md-2">
        <div style="display:block;width:60px;height:60px;overflow:hidden;border:1px solid #eaeaea;margin:0 auto 0 auto;">
            <img class="popimg" src="@ViewBag.ImagePath" onerror="imgloaderror(this);" style=" margin:2px;max-width:54px;cursor:pointer" onclick="showImage(this)" />
        </div>
    </div>
    
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.Notes) :
    </label>
    <div class="col-md-10">
        @Model.Notes
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.UpdatedTime) :
    </label>
    <div class="col-md-10">
        @Model.UpdatedTime
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.CreatedTime) :
    </label>
    <div class="col-md-10">
        @Model.CreatedTime
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.IsEnabled) :
    </label>
    <div class="col-md-10">
        @Html.Raw(Model.IsEnabled == true ? "是" : "否")
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.IsDeleted) :
    </label>
    <div class="col-md-10">
        @Html.Raw(Model.IsDeleted == true ? "是" : "否")
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        操作人员 :
    </label>
    <div class="col-md-10">
        @Html.Raw(Model.Operator != null ? Model.Operator.Member.MemberName : "")
    </div>
</div>
<script type="text/javascript">
    function showImage(my) {
        var path = $(my).attr("src");
        var data = '<div style="text-align:center;cursor:poniter"><img src="' + path + '"/></div>';
        bootbox.dialog({
            message: data,
            title: "查看",
        });
    };
</script>