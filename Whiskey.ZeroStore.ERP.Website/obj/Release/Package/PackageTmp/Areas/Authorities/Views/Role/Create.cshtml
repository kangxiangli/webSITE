    })
    function exisName() {
        var send= $(".rolecrea_div #RoleName");
        var t =send.val().trim();
        if (t != "") {
            $.post("/Authorities/Role/ExisRoleName", { name: t }, function (da) {
                if (da.ResultType==3) {
                    $(send).parents("div:first").addClass("has-error");
                    $(send).attr("title", "角色名称已存在");
                    $("[data-bb-handler='success']").attr("disabled", "disabled");
                }
            })
        }
    }
</script>



