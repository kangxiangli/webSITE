</div>
<script>
    $(function () {
        $(document).delegate("#roleright_tab .tree :checkbox:not([class*='xianshi'])", "click", function () {
            var weight = $(".tree .erji>span>:checkbox:checked").length;
            $("#baseinfo_tab #Weight").val(weight);
        });
