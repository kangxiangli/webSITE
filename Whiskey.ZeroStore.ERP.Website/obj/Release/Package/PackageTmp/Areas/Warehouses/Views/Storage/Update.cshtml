@using Whiskey.ZeroStore.ERP.Transfers
@model StorageDto
<style>
    .diacl .modal-dialog {
        width: 60%;
    }
</style>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.StoreId) :
    </label>
    <div class="col-md-6 storage-update">
        <select id="StoreId" name="StoreId" class="form-control"></select>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.StorageType) :
    </label>
    <div class="col-md-6">
        <input id="storagetype_sel" type="hidden" value="@Model.StorageType" />
        <select class="form-control selectpicker" id="StorageTypeSel" name="StorageType">
            <option value="0">线上店铺仓库</option>
            <option value="1">线下店铺仓库</option>
        </select>
        @*@Html.TextBoxFor(m=> m.StorageType, new { @class = "form-control" })*@
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.StorageCategory)：
    </label>
    <div class="col-md-6">
        <select id="StorageType" name="StorageType" class="form-control selectpicker">
            @{
                if (Model.StorageCategory == 0)
                {
                    <option value="0" selected="selected">商品仓(可零售)</option>
                    <option value="1">设备仓(不可零售)</option>
                }
                else
                {
                    <option value="0">商品仓(可零售)</option>
                    <option value="1" selected="selected">设备仓(不可零售)</option>
                }
            }
        </select>
        @*@Html.TextBoxFor(m=> m.StorageType, new { @class = "form-control" })*@
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.StorageName) :
    </label>
    <div class="col-md-6">
        @Html.TextBoxFor(m => m.StorageName, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.TelePhone)：
    </label>
    <div class="col-md-6">
        @Html.TextBoxFor(m => m.TelePhone, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.StorageAddress) :
    </label>
    <div class="col-md-6">
        @Html.TextBoxFor(m => m.StorageAddress, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.Description) :
    </label>
    <div class="col-md-6">
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })

    </div>
</div>
