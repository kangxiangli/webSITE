<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.IsOrderStorage) :
    </label>
    <div class="col-md-6">
        <label class="radio-inline">是<input type="radio" value="true" name="IsOrderStorage" id="isOrderStorage_true" onchange="orderStorageChange(this);" /></label>
        <label class="radio-inline">否<input type="radio" value="false" name="IsOrderStorage" id="isOrderStorage_false" /></label>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.IsDefaultStorage) :
    </label>
    <div class="col-md-6">
        <label class="radio-inline">是<input type="radio" name="IsDefaultStorage" id="isDefaultStorage_true" value="true" /></label>
        <label class="radio-inline">否<input type="radio" name="IsDefaultStorage" id="isDefaultStorage_false" value="false" /></label>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.IsTempStorage) :
    </label>
    <div class="col-md-6">
        <label class="radio-inline">@Html.RadioButtonFor(f => f.IsTempStorage, true)是</label>
        <label class="radio-inline">@Html.RadioButtonFor(f => f.IsTempStorage, false)否</label>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.IsForAddInventory) :
    </label>
    <div class="col-md-6">

        <label class="radio-inline">是<input type="radio" name="IsForAddInventory" id="IsForAddInventory_true" value="true" @(Model.IsForAddInventory ? "checked" : "") /></label>
        <label class="radio-inline">否<input type="radio" name="IsForAddInventory" id="IsForAddInventory_false" value="false" @(!Model.IsForAddInventory ? "checked" : "") /></label>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.IsEnabled) :
    </label>
    <div class="col-md-6">
        <label class="radio-inline">是<input type="radio" value="true" name="IsEnabled" id="isenable_true" /></label>
        <label class="radio-inline">否<input type="radio" value="false" name="IsEnabled" id="isenable_false" /></label>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">
        @Html.DisplayNameFor(m => m.IsPublicInfo) :
    </label>
    <div class="col-md-6">
        <label class="radio-inline">是<input type="radio" value="true" id="ispublicinfo_true" name="IsPublicInfo" /></label>
        <label class="radio-inline">否<input type="radio" value="false" id="ispublicinfo_false" name="IsPublicInfo" /></label>
    </div>
</div>
<div>
    <label id="public_info_lab" style="display:none">@Model.IsPublicInfo</label>
    <label id="IsDefaultStorage_lab" style="display:none">@Model.IsDefaultStorage</label>
    <label id="IsVestIn_lab" style="display:none">@Model.IsVestIn</label>
    <label id="IsOrderStorage_lab" style="display:none">@Model.IsOrderStorage</label>
    <label id="IsEnabled_lab" style="display:none">@Model.IsEnabled</label>

</div>
<script>
    
    $(function () {
        $(".selectpicker").selectpicker();

        $(".storage-update #StoreId").queryManageStore({selected:'@Model.StoreId'});
        if ($("#public_info_lab").text() == "True") {

            $("#ispublicinfo_true").attr("checked", "checked");
        }
        else {

            $("#ispublicinfo_false").attr("checked", "");
        }

        if ($("#IsDefaultStorage_lab").text() == "True") {
            $("#isDefaultStorage_true").attr("checked", "checked")
        }
        else
            $("#isDefaultStorage_false").attr("checked", "");

        if ($("#IsVestIn_lab").text() == "True") {
            $("#isVestIn_true").attr("checked", "checked");
        }
        else {
            $("#isVestIn_false").attr("checked", "");
        }
        if ($("#IsOrderStorage_lab").text() == "True") {
            $("#isOrderStorage_true").attr("checked", "checked");
        }
        else {
            $("#isOrderStorage_false").attr("checked", "");
        }

        if ($("#IsEnabled_lab").text() == "True") {
            $("#isenable_true").attr("checked", "checked");
        }
        else {
            $("#isenable_false").attr("checked", "");
        }

        var t = $("#storagetype_sel").val();
        if (t == "1") {
            $("#StorageTypeSel option[value='1']").attr("selected", "selected");
        }
    })

    function orderStorageChange(sender) {
        var $this = $(sender);
        $.whiskey.web.ajaxConfirm({
            question: "提示",
            notes: "作为订购仓库后，其它仓库将会取消成为订购仓库",
            success_event: function () {

            },
            cancel_event: function () {
                $("#isOrderStorage_false").prop("checked", true);
                $this.prop("checked", false);
            }
        });
    }

</script>
@Html.HiddenFor(m => m.Id)
