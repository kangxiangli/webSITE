        function sendOk(obj, id, nam) {
            $.post("/Warehouses/Purchase/UpdateWord", { id: id, fieldName: nam }, function (da) {
                if (da != null) {
                    if (da.ResultType == 3) {
                        obj.removeClass("fa-life-ring").addClass("fa-clipboard").attr("style", "color:green")
                    }
                    else {
                        $.whiskey.web.alert({
                            type: "error",
                            content: da.Message
                        });
                    }
                }
                else {
                    $.whiskey.web.alert({
                        type: "warning",
                        content: "操作异常"
                    });
                }

            });
        }
        function View(sender, Id) {
            var reg = /^pur(.+)$/;
            var viewUrl = "@Url.Action("View")";
            var viewId = Id;
            if (reg.test(Id)) {
                viewUrl = "@Url.Action("PurItemView")";
                viewId = reg.exec(Id)[1];
            }
            var view = new $.whiskey.web.ajaxView({
                caption: "详细信息",
                actionUrl: viewUrl,
                params: { Id: viewId },
                lockButton: $(sender),
            });

        }


        function Update(sender, Id) {
            var dialog = new $.whiskey.web.ajaxDialog({
                caption: "修改信息",
                actionUrl: "@Url.Action("Update")",
                getParams: { Id: Id },
                lockButton: $(sender),
                formValidator: function () {
                    var $form = $(".modal-form");
                    if (!$form.valid()) {
                        return false;
                    } else {
                        return true;
                    }
                },
                postComplete: function () {
                    $.whiskey.datatable.reset(true);
                    return true;
                },
