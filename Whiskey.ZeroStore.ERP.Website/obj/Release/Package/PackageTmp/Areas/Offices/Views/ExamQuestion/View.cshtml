@using Whiskey.ZeroStore.ERP.Models
@model ExamQuestionEntity

@*<link rel="stylesheet" href="/content/styles/jquery/jquery.zTreeStyle.css" />*@

<ul id="product" class="nav nav-tabs">
    <li class="active">
        <a href="#base" data-toggle="tab">基础信息</a>
    </li>

</ul>
<div class="tab-content">
    <div class="tab-pane fade active in " id="base">
        <div class="form-group">
            <label class="control-label col-md-3">
                @Html.DisplayNameFor(m => m.Title) :
            </label>
            <div class="col-md-7">
                @Html.DisplayFor(m => m.Title, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">
                @Html.DisplayNameFor(m => m.Score) :
            </label>
            <div class="col-md-7">
                @Html.DisplayFor(m => m.Score, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">
                @Html.DisplayNameFor(m => m.IsMulti) :
            </label>
            <div class="col-md-7">
                @(Model.IsMulti.Value ? "多选" : "单选")

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">
                @Html.DisplayNameFor(m => m.CreatedTime) :
            </label>
            <div class="col-md-7">
                @Html.DisplayFor(m => m.CreatedTime, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">
                @Html.DisplayNameFor(m => m.UpdatedTime) :
            </label>
            <div class="col-md-7">
                @Html.DisplayFor(m => m.UpdatedTime, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">
                @Html.DisplayNameFor(m => m.RightAnswer) :
            </label>
            <div class="col-md-7">
                @Model.RightAnswer
            </div>
        </div>
        @if (!string.IsNullOrEmpty(Model.ImgUrl))
        {
            <div class="col-md-offset-3">

                <img src="@Model.ImgUrl" width="100" height="100" />
            </div>
        }
        <div class="form-group">
            <label class="control-label col-md-3">
                @Html.DisplayNameFor(m => m.AnswerOptions) :
            </label>
            <div class="col-md-7">
                <ul>
                    @foreach (var item in ViewBag.AnswerOptions as List<AnswerOptionEntry>)
                    {
                        <li>

                            <label>@item.Value : @item.Title</label>
                            @if (!string.IsNullOrEmpty(item.ImgUrl))
                            {
                                <img src="@item.ImgUrl" width="50" height="50" />
                            }
                        </li>
                    }
                </ul>

            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">
                操作人:
            </label>
            <div class="col-md-7">
                @Html.DisplayFor(m => m.Operator.Member.MemberName, new { @class = "form-control" })
            </div>
        </div>


    </div>
</div>
<script type="text/javascript">


</script>
