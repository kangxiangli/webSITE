@using Whiskey.ZeroStore.ERP.Transfers
@using Whiskey.ZeroStore.ERP.Transfers.Enum.Office
@using Whiskey.ZeroStore.ERP.Transfers.Enum.Base
@model LeaveInfoDto


<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.LeaveReason) :
    </label>
    <div class="col-md-10">
        <label class="control-label">
            @Model.LeaveReason
        </label>        
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.VacationType) :
    </label>
    <div class="col-md-10">
        @{
            if (Model.VacationType == (int)VacationFlag.AnnualLeave)
            {
                <label class="control-label">年假</label>;
            }
            else if (Model.VacationType == (int)VacationFlag.ChangeRest)
            {
                <label class="control-label">调休</label>;
            }
            else if (Model.VacationType == (int)VacationFlag.PaidLeave)
            {
                <label class="control-label">带薪休假</label>;
            }           
            else if (Model.VacationType == (int)VacationFlag.Leave)
            {
                <label class="control-label">事假</label>
            }
            else if (Model.VacationType == (int)VacationFlag.SickLeave)
            {
                <label class="control-label">病假</label>
            }            

}
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        请假时间 :
    </label>
    <div class="col-md-8">        
        <div class="input-group control-label">
            @Model.StartTime
            <span style="color: #5ebd5e">至</span>
            @Model.EndTime
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        请假天数 :
    </label>
    <div class="col-md-2">
        <label class="control-label">
            @Model.LeaveDays 天
        </label>        
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.VerifyType) :
    </label>
    <div class="col-md-10">
        <select class="form-control selectpicker" id="VerifyType" name="VerifyType">            
            <option value="@((int)VerifyFlag.Pass)">审核通过</option>
            <option value="@((int)VerifyFlag.NoPass)">审核不通过</option>
        </select>
    </div>
</div>
@Html.HiddenFor(x=>x.Id)
@Html.HiddenFor(x => x.AdminId)
<script type="text/javascript">
    $(function () {
        var type = "@Model.VerifyType";
        $("#VerifyType option").each(function () {
            var value = $(this).val();
            if (value ==type) {
                $(this).attr("selected", "selected");
            }
        })
    });
</script>
<script>
    // selectpicker 初始化
    $(function () {
        $('.selectpicker').selectpicker();
    })
</script>