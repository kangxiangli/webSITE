@using Whiskey.ZeroStore.ERP.Website.Models
@model List<Purchase_View_Model>

<div class="table-light">
    <table class="table table-bordered table-hover table-list">
        <thead>
            <tr>
                <th>编号</th>
                <th>商品货号</th>
                <th>数量</th>
                <th>时间</th>
            </tr>
        </thead>
        <tbody>
            @{var counter = 0;}
            @foreach (var item in Model)
            {
                counter++;
                <tr>
                    <td>@counter</td>
                    <td>@item.ProductNumber</td>
                    <td>@item.Amount</td>
                    <td>@item.UpdateTime.ToString("hh:mm:ss")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
