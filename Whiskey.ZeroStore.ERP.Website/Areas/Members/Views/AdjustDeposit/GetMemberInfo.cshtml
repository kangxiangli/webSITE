@using Whiskey.ZeroStore.ERP.Models
@model Member

<div class="tab-content">
    <div class="tab-pane fade active in " id="base">

        <div class="form-group">
            <label class="control-label col-md-2">
                归属店铺：
            </label>
            <div class="col-md-10">
                @Html.Raw(Model.StoreId == null ? "" : Model.Store.StoreName)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                姓名 :
            </label>
            <div class="col-md-10">
                @Model.MemberName
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                会员类型：
            </label>
            <div class="col-md-10">
                @Html.Raw(Model.MemberTypeId == null ? "" : Model.MemberType.MemberTypeName)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                储值 :
            </label>
            <div class="col-md-10">
                @Model.Balance
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                积分 :
            </label>
            <div class="col-md-10">
                @Model.Score
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                入会时间 :
            </label>
            <div class="col-md-10">
                @Model.CreatedTime
            </div>
        </div>
    </div>
</div>



