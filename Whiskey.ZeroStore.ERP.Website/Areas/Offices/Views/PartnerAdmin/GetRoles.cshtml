<div class="row">
    <div class="panel panel-list" style="max-height: 400px;overflow-y: scroll;">

        <table class="table table-list table-hover valign-middle" width="100%">
            <thead>
                <tr><th>编号</th><th>角色</th></tr>
            </thead>
            <tbody id="managementScopeInfo"></tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(function () {

        //managementScopeInfo
        $.ajax({
            url: "@Url.Action("GetRolesInfo")",
            type: "post",
            data: { id: "@ViewBag.AdminId" },
            success: function (msg) {
                var data = eval(msg);
                var htmlStr = "";
                $(data).each(function (i) {
                    htmlStr += "<tr><td>" + (i + 1) + "</td><td>" + this.RoleName + "</td></tr>";
                });
                $("#managementScopeInfo").html(htmlStr);
            }
        });
    });
</script>

