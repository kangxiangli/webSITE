@using Whiskey.ZeroStore.ERP.Models
@using Whiskey.ZeroStore.ERP.Transfers.Enum.Base
@model Overtime

<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.OvertimeReason) :
    </label>
    <div class="col-md-10">
        @Model.OvertimeReason
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        加班时间 :
    </label>
    <div class="col-md-10">
        <div class="input-group">
            <span class="form-control">@Model.StartTime</span>
            <span class="input-group-addon">至</span>
            <span class="form-control">@Model.EndTime</span>
        </div>
    </div>
</div>
<div class="form-group" id="rest_div">
    <label class="control-label col-md-2">
        休息时长 :
    </label>
    <div class="col-md-10">
        <div class="input-group">
            @Model.RestHours
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(x => x.OvertimeDays) :
    </label>
    <div class="col-md-10">
        @Model.OvertimeDays
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(x => x.GetPoints) :
    </label>
    <div class="col-md-10">
        @Model.GetPoints
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(x => x.VerifyType) :
    </label>
    <div class="col-md-10">
        <select id="VerifyType" name="VerifyType" class="form-control" disabled="disabled">
            <option value="@((int)VerifyFlag.Verifing)">审核中</option>
            <option value="@((int)VerifyFlag.Pass)">审核通过</option>
            <option value="@((int)VerifyFlag.NoPass)">审核不通过</option>
        </select>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.UpdatedTime) :
    </label>
    <div class="col-md-10">
        @Model.UpdatedTime
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.CreatedTime) :
    </label>
    <div class="col-md-10">
        @Model.CreatedTime
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.IsEnabled) :
    </label>
    <div class="col-md-10">
        @Html.Raw(Model.IsEnabled == true ? "是" : "否")
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        @Html.DisplayNameFor(m => m.IsDeleted) :
    </label>
    <div class="col-md-10">
        @Html.Raw(Model.IsDeleted == true ? "是" : "否")
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">
        操作人员 :
    </label>
    <div class="col-md-10">
        @Html.Raw(Model.Operator != null ? Model.Operator.Member.MemberName : "")
    </div>
</div>