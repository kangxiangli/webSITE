
@using Whiskey.ZeroStore.ERP.Models
@model ScoreRule


<div>
    <div class="tab-pane fade in active" id="base_tab">
        <div class="form-group">
            <label class="control-label col-md-5">
                @Html.DisplayNameFor(c => c.ScoreName)：
            </label>
            <div class="col-md-4">
                @Model.ScoreName
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-5">
                @Html.DisplayNameFor(c => c.ScoreNumber)：
            </label>
            <div class="col-md-4">
                @Model.ScoreNumber
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-5">
                @Html.DisplayNameFor(c => c.MinConsum)<span>(￥)</span>：
            </label>
            <div class="col-md-4">
                @Model.MinConsum
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-5">
                @Html.DisplayNameFor(m => m.IsConsumeScoreGetScore)：
            </label>
            <div class="col-md-4">
                @Html.Raw(Model.IsConsumeScoreGetScore == true ? "是" : "否")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-5">
                @Html.DisplayNameFor(m => m.IsConsumeCardMoneyGetScore)：
            </label>
            <div class="col-md-4">
                @Html.Raw(Model.IsConsumeCardMoneyGetScore == true ? "是" : "否")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-5">
                @Html.DisplayNameFor(m => m.CanUseScoreWhenNotBelongToStore)：
            </label>
            <div class="col-md-7">
                @Html.Raw(Model.CanUseScoreWhenNotBelongToStore == true ? "是" : "否")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-5">
                @Html.DisplayNameFor(m => m.CanGetScoreWhenNotBelongToStore)：
            </label>
            <div class="col-md-7">
                @Html.Raw(Model.CanGetScoreWhenNotBelongToStore == true ? "是" : "否")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-5">
                消费金额 : 获取积分：
            </label>
            <div class="col-md-4">
                @Model.ConsumeUnit<span> : </span>@Model.ScoreUnit
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-5">
                @Html.DisplayNameFor(m => m.Descrip)：
            </label>
            <div class="col-md-4">
                @Model.Descrip
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-5">
                @Html.DisplayNameFor(m => m.IsEnabled)：
            </label>
            <div class="col-md-4">
                @Html.Raw(Model.IsEnabled == true ? "是" : "否")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-5">
                @Html.DisplayNameFor(m => m.IsDeleted)：
            </label>
            <div class="col-md-4">
                @Html.Raw(Model.IsDeleted == true ? "是" : "否")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-5">
                @Html.DisplayNameFor(c => c.CreatedTime)：
            </label>
            <div class="col-md-4">
                @Model.CreatedTime
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-5">
                @Html.DisplayNameFor(c => c.UpdatedTime)：
            </label>
            <div class="col-md-4">
                @Model.UpdatedTime
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-5">
                操作人员：
            </label>
            <div class="col-md-4">
                @Html.Raw(Model.Operator != null ? Model.Operator.Member.MemberName : "")
            </div>
        </div>
        <input type="hidden" value="@Model.Id" id="hid_id" />
    </div>
 
</div>







