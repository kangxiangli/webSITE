<script type="text/javascript">
    $div = $(".storeSellerContent[data-storeid='@Request["StoreId"]']");
    $seller = $div.find("select._sel_seller");
    $member = $div.find("select._sel_member");
    $(function () {
        $("#v_member_div .input-daterange").datepicker();
        var _dt_seller = $("#v_seller_div #dt_seller").dataTable({
            "bScrollCollapse": false,
            "sAjaxSource": "SellerList",
            "fnServerParams": function (aoData) {
                var conditions = new $.whiskey.filter.group();
                conditions.Rules.push(new $.whiskey.filter.rule("IsDeleted", "false", "equal"));
                conditions.Rules.push(new $.whiskey.filter.rule("IsEnabled", "true", "equal"));
                $("#v_seller_div .form-search input[name][name!='StartDate'][name!='EndDate'],.form-search select").each(function () {
                    var field = $(this).attr("name");
                    var value = $(this).val();
                    if (value != null && value.length > 0 && value != "-1") {
                        conditions.Rules.push(new $.whiskey.filter.rule(field, value, $(this).hasClass("_select_input") ? "equal" : "contains"));
                    }
                });
                aoData.push({ name: "conditions", value: JSON.stringify(conditions) });
                aoData.push({name:"StoreId",value:@Request["StoreId"]});
            },
            "aoColumns": [{
                "bVisible": false,
                "bSearchable": false,
                "sName": "Id",
                "mData": "Id"
            },
            {
                "sTitle": $.whiskey.datatable.tplTitleCheckbox(),
                "sName": "Id",
                "bSortable": false,
                "bSearchable": false,
                "mData": function (data) {
                    return $.whiskey.datatable.tplListCheckbox(data.Id);
                }
            },
            {
                "sTitle": "编号",
                "bSortable": false,
                "sName": "RowNumber",
                "mData": function (data) {
                    var index = data.iDisplayIndex + 1;
                    return '' + index + '';
                }
            },
            {
                "sTitle": "头像",
                "bSortable": false,
                "sName": "UserPhoto",
                "mData": function (data) {
                    return '<div><img src="' + data.UserPhoto + '" style="margin:2px;max-width:40px;" class="img-circle" /></div>'
                },
            },
            {
                "sTitle": "员工",
                "bSortable": false,
                "sName": "RealName",
                "mData": function (data) {
                    return data.RealName;
                },
            },
            {
                "sTitle": "性别",
                "bSortable": false,
                "sName": "Gender",
                "mData": function (data) {
                    return data.Gender;
                },
            },
            {
                "sTitle": "手机号",
                "bSortable": false,
                "sName": "MobilePhone",
                "mData": function (data) {
                    return data.MobilePhone;
                },
            },
            {
                "sTitle": "选择",
                "bSortable": false,
                "sName": "",
                "mData": function (data) {
                    var txt = "选择";
                    var color = "default";
                    if ($seller.find("option[value=" + data.Id + "]").length > 0) {
                        color = "success ";
                        txt = "已选择";
                    }
                    return '<button id="hoverStyle_8" type="button" onclick="choose(this,0)" class="btn btn-' + color + ' btn_select" data-name="' + data.RealName + '"  data-Id="' + data.Id + '"><span>' + txt + '</span></button>';
                },
            },
            ]
        });

        var _dt_member = $("#v_member_div #dt_member").dataTable({
            "bScrollCollapse": false,
            "sAjaxSource": "MemberList",
            "fnServerParams": function (aoData) {
                var conditions = new $.whiskey.filter.group();
                conditions.Rules.push(new $.whiskey.filter.rule("IsDeleted", "false", "equal"));
                conditions.Rules.push(new $.whiskey.filter.rule("IsEnabled", "true", "equal"));
                var startTime = $("#v_member_div #StartDate").val();
                var endTime = $("#v_member_div #EndDate").val();
                if (startTime.length > 0 && endTime.length > 0) {
                    conditions.Rules.push(new $.whiskey.filter.rule("CreatedTime", startTime, "greater"));
                    conditions.Rules.push(new $.whiskey.filter.rule("CreatedTime", $.whiskey.tools.dateAddDay(endTime, 1), "less"));
                }
                $("#v_member_div .form-search input[name][name!='StartDate'][name!='EndDate'],.form-search select:not(._select_input_greater)").each(function () {
                    var field = $(this).attr("name");
                    var value = $(this).val();
                    if (value != null && value.length > 0 && value != "-1") {
                        conditions.Rules.push(new $.whiskey.filter.rule(field, value, $(this).hasClass("_select_input") ? "equal" : "contains"));
                    }
                });
                var hasbalance = $("#v_member_div select._select_input_greater").val();
                if (hasbalance != null && hasbalance.length > 0) {
                    conditions.Rules.push(new $.whiskey.filter.rule("Balance", 0,hasbalance==1? "greater":"equal"));
                }

                aoData.push({ name: "conditions", value: JSON.stringify(conditions) });
                aoData.push({name:"StoreId",value:@Request["StoreId"]});
            },
            "aoColumns": [{
                "bVisible": false,
                "bSearchable": false,
                "sName": "Id",
                "mData": "Id"
            },
            {
                "sTitle": $.whiskey.datatable.tplTitleCheckbox(),
                "sName": "Id",
                "bSortable": false,
                "bSearchable": false,
                "mData": function (data) {
                    return $.whiskey.datatable.tplListCheckbox(data.Id);
                }
            },
            {
                "sTitle": "编号",
                "bSortable": false,
                "sName": "RowNumber",
                "mData": function (data) {
                    var index = data.iDisplayIndex + 1;
                    return '' + index + '';
                }
            },
            //{
            //    "sTitle": "头像",
            //    "bSortable": false,
            //    "sName": "UserPhoto",
            //    "mData": function (data) {
            //        return '<div><img src="' + data.UserPhoto + '" style="margin:2px;max-width:40px;" class="img-circle" /></div>'
            //    },
            //},
            {
                "sTitle": "昵称",
                "bSortable": false,
                "sName": "MemberName",
                "mData": function (data) {
                    return data.MemberName;
                },
            },
            {
                "sTitle": "姓名",
                "bSortable": false,
                "sName": "RealName",
                "mData": function (data) {
                    return data.RealName;
                },
            },
            {
                "sTitle": "手机号",
                "bSortable": false,
                "sName": "MobilePhone",
                "mData": function (data) {
                    return data.MobilePhone;
                },
            },
            //{
            //    "sTitle": "性别",
            //    "bSortable": false,
            //    "sName": "Gender",
            //    "mData": function (data) {
            //        return data.Gender;
            //    },
            //},
            {
                "sTitle": "类型",
                "bSortable": false,
                "sName": "MemberTypeName",
                "mData": function (data) {
                    return data.MemberTypeName;
                },
            },
            {
                "sTitle": "创建时间",
                "bSortable": false,
                "sName": "CreatedTime",
                "mData": function (data) {
                    return $.whiskey.tools.dateFormat(data.CreatedTime);
                },
            },
            {
                "sTitle": "选择",
                "bSortable": false,
                "sName": "",
                "mData": function (data) {
                    var txt = "选择";
                    var color = "default";
                    if ($member.find("option[value=" + data.Id + "]").length > 0) {
                        color = "success ";
                        txt = "已选择";
                    }
                    return '<button id="hoverStyle_8" type="button" onclick="choose(this,1)" class="btn btn-' + color + ' btn_select" data-name="' + data.MemberName + '"  data-Id="' + data.Id + '"><span>' + txt + '</span></button>';
                },
            },
            ]
        });

        $("#v_seller_div #Search").on("click", function () {
            $.whiskey.datatable.reset(false, _dt_seller);
        });

        $("#v_seller_div #Clear").on("click", function () {
            $.whiskey.web.clearForm("#v_seller_div .form-search");
        });

        $("#v_seller_div #SelectAll").on("click", function () {
            $("#v_seller_div #dt_seller .btn_select:not(.btn-success)").click();
        });

        $("#v_member_div #Search").on("click", function () {
            $.whiskey.datatable.reset(false, _dt_member);
        });

        $("#v_member_div #Clear").on("click", function () {
            $.whiskey.web.clearForm("#v_member_div .form-search");
        });

        $("#v_member_div #SelectAll").on("click", function () {
            $("#v_member_div #dt_member .btn_select:not(.btn-success)").click();
        });

    });

    function choose(my,type) {
        var $sel = type==0?$seller:$member;
        var name = $(my).attr("data-name");
        var columnValue = $(my).attr("data-Id");
        if ($sel.find("option[value='" + columnValue + "']").length > 0) {
            $sel.find("option[value='" + columnValue + "']").remove();
            $(my).text("选择").removeClass("btn-success").addClass("btn-default");
        } else {
            $(my).text("已选择").removeClass("btn-default").addClass("btn-success");
            var option = '<option value="' + columnValue + '" selected="selected">' + name + '</option>';
            $sel.append(option);
        }
        $sel.parents(".Seller_details:first").siblings(".lbl_count_content").find($sel.attr("data-dom")).text($sel.val().length);
        $sel.selectpicker('refresh');
    }
</script>
