
@using Whiskey.ZeroStore.ERP.Models
@model Resignation

<style>
    .info {
        padding: 2rem;
        background: rgba(0, 0, 0, 0.2);
    }
</style>
<div class="createDiv">
    <ul class="nav nav-tabs" role="tablist" id="navTab">
        <li role="presentation"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">基本信息</a></li>
        <li role="presentation" class="active"><a href="#personnel" aria-controls="personnel" role="tab" data-toggle="tab">人事</a></li>
    </ul>
    <div id="base" style="display:none" class="info">
        <div class="form-group">
            <label class="control-label col-md-2">
                部门 :
            </label>
            <div class="col-md-7">
                <input type="text" value="@ViewBag.ResignationDepartmentName" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                离职人 :
            </label>
            <div class="col-md-7">
                <input type="text" value="@ViewBag.ResignationName" class="form-control" disabled />
                <input type="hidden" id="ResignationId" value="@Model.ResignationId" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                交接情况  :
            </label>
            <div class="col-md-8">
                <label style="margin-left:20px">
                    <input type="checkbox" id="documentation" />@Html.DisplayNameFor(m => m.Documentation)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                交接人部门:
            </label>
            <div class="col-md-8">
                <div class="col-md-6">
                    <input type="text" value="@ViewBag.HandoverManDepartmentName" class="form-control" disabled />
                    <input type="hidden" id="HandoverManDepartmentId" value="@Model.DepartmentId" />
                </div>

            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                交接人 :
            </label>
            <div class="col-md-8">
                <div class="col-md-6">
                    <input type="text" value="@ViewBag.HandoverManName" class="form-control" disabled />
                    <input type="hidden" id="HandoverManId" value="@Model.HandoverManId" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                @Html.DisplayNameFor(m => m.ResignationDate) :
            </label>
            <div class="col-md-8">
                @Html.TextBoxFor(x => x.ResignationDate, new { @class = "form-control", @placeholder = "离职时间" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                @Html.DisplayNameFor(m => m.ResignationReason) :
            </label>
            <div class="col-md-8">
                @Html.TextAreaFor(m => m.ResignationReason, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                提交人:
            </label>
            <div class="col-md-8">
                <input type="text" disabled class="form-control" value="ViewBag.SubmitName " />
            </div>
        </div>
    </div>
    <div id="personnelDiv" class="info">
        <div class="form-group">
            <label class="control-label col-md-2">
                交接情况  :
            </label>
            <div class="col-md-8">
                <label style="margin-left:20px">
                    <input type="checkbox" name="DepartmentManagerConfirmed" id="DepartmentManagerConfirmed" />@Html.DisplayNameFor(m => m.DepartmentManagerConfirmed)
                </label>
            </div>
            <div class="form-group" style="margin-top:30px;">
                <label class="control-label col-md-2">

                </label>
                <div class="col-md-8">
                    <label style="margin-left:20px">
                        <input type="checkbox" name="OfficeBooks" id="OfficeBooks" />@Html.DisplayNameFor(m => m.OfficeBooks)
                    </label>
                    <label style="margin-left:20px">
                        <input type="checkbox" name="OfficeSupplies" id="OfficeSupplies" />@Html.DisplayNameFor(m => m.OfficeSupplies)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">

                </label>
                <div class="col-md-8">
                    <label style="margin-left:20px">
                        <input type="checkbox" name="Data" id="Data" />@Html.DisplayNameFor(m => m.Data)
                    </label>
                    <label style="margin-left:20px">
                        <input type="checkbox" name="JobCard" id="JobCard" />@Html.DisplayNameFor(m => m.JobCard)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">

                </label>
                <div class="col-md-8">
                    <label style="margin-left:20px">
                        <input type="checkbox" name="OfficeEquipment" id="OfficeEquipment" />@Html.DisplayNameFor(m => m.OfficeEquipment)
                    </label>
                    <label style="margin-left:20px">
                        <input type="checkbox" name="OfficeKey" id="OfficeKey" />@Html.DisplayNameFor(m => m.OfficeKey)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">

                </label>
                <div class="col-md-8">
                    <label style="margin-left:20px">
                        <input type="checkbox" name="Telephone" id="Telephone" />@Html.DisplayNameFor(m => m.Telephone)
                    </label>
                    <label style="margin-left:20px">
                        <input type="checkbox" name="SocialSecurityStop" id="SocialSecurityStop" />@Html.DisplayNameFor(m => m.SocialSecurityStop)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">

                </label>
                <div class="col-md-8">
                    <label style="margin-left:20px">
                        <input type="checkbox" name="OtherBenefitsStop" id="OtherBenefitsStop" />@Html.DisplayNameFor(m => m.OtherBenefitsStop)
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
            </label>
            <div class="col-md-8">
                <label style="margin-left:20px">
                    <input type="checkbox" name="Other" id="Other" />@Html.DisplayNameFor(m => m.Other)
                </label>
                <textarea id="OtherDesc" class="form-control" maxlength="300" style="display:none"></textarea>
            </div>
        </div>
    </div>
</div>
<link href="/Content/Styles/Bootstrap/DateTimePicker/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<script src="/Content/Scripts/Bootstrap/DateTimePicker/bootstrap-datetimepicker.min.js"></script>
<script src="/Content/Scripts/Bootstrap/DateTimePicker/bootstrap-datetimepicker.zh-CN.js"></script>
<script type="text/javascript">
    $(function () {
        $("#navTab li").click(function () {
            //personnelDiv personnel
            if (!$(this).hasClass("active")) {
                if ($(this).find("a").attr("aria-controls") == "home") { $("#base").css("display", ""); $("#personnelDiv").css("display", "none"); }
                else { $("#base").css("display", "none"); $("#personnelDiv").css("display", ""); }
            }
        });
        $(".createDiv #ResignationDate").val(("@Model.ResignationDate").replace("0:00:00", ""));
        if ("@Model.Documentation" == "True") {
            $(".createDiv #documentation").attr("checked", true);
        } else {
            $(".createDiv #documentation").attr("checked", false);
        }
        $(".createDiv #Other").click(function () {
            if ($(this).is(':checked')) {
                $("#OtherDesc").css("display", "");
            } else {
                $("#OtherDesc").css("display", "none");
            }
        });
    });
    function dataValiPost() {
        var errcou = 0;
        var da = [];
        var ResignationId = $(".createDiv #ResignationId ").val();
        var name = $(".createDiv #RealName ").val();
        da.push({ "Id": "@Model.Id" });
        da.push({ "ResignationId": "@Model.ResignationId" });
        da.push({ "DepartmentId": "@Model.DepartmentId" });
        da.push({ "Documentation": "@Model.Documentation" });
        da.push({ "HandoverManId": "@Model.HandoverManId" });
        da.push({ "ResignationDate": "@Model.ResignationDate" });
        da.push({ "ResignationReason": "@Model.ResignationReason" });
        da.push({ "operationId": "@Model.operationId" });
        if ($(".createDiv  #DepartmentManagerConfirmed").is(':checked')) {
            $(".createDiv #DepartmentManagerConfirmed").css({ "border": "" });
            da.push({ "DepartmentManagerConfirmed": true });

        } else {
            $(".createDiv #DepartmentManagerConfirmed").css({ "border": "2px solid  #e5603b" }).attr("title", "请勾选部门经理确认！");
            errcou = 1;
        }
        da.push({ "OfficeBooks": $(".createDiv #OfficeBooks").is(":checked") ? true : false });
        da.push({ "OfficeSupplies": $(".createDiv #OfficeSupplies").is(":checked") ? true : false });
        da.push({ "Data": $(".createDiv #Data").is(":checked") ? true : false });
        da.push({ "JobCard": $(".createDiv #JobCard").is(":checked") ? true : false });
        da.push({ "OfficeEquipment": $(".createDiv #OfficeEquipment").is(":checked") ? true : false });
        da.push({ "OfficeKey": $(".createDiv #OfficeKey").is(":checked") ? true : false });
        da.push({ "Telephone": $(".createDiv #Telephone").is(":checked") ? true : false });
        da.push({ "SocialSecurityStop": $(".createDiv #SocialSecurityStop").is(":checked") ? true : false });
        da.push({ "OtherBenefitsStop": $(".createDiv #OtherBenefitsStop").is(":checked") ? true : false });
        da.push({ "Other": $(".createDiv #Other").is(":checked") ? true : false });
        if ($(".createDiv #Other").is(":checked")) {
            da.push({ "OtherDesc": $(".createDiv #OtherDesc").val() });
        }
        else {
            da.push({ "OtherDesc": "" });
        }
        if (errcou == 0) {
            return { error: 0, data: da };
        }
        else {

            return { error: 1 }
        }
    }
</script>