@{
    Layout = null;
    string themePath = ViewBag.themePath ?? string.Empty;
    string _tempFile = Path.Combine(themePath, "_RegisterLogin.cshtml");
}

@using Whiskey.Web.Helper;
@using Whiskey.ZeroStore.ERP.Transfers
@model MemberDto

@{
    <script src="~/Content/Scripts/crypto/aeshelper-min.js"></script>
    <input type="hidden" value="@ViewBag._tc_key" id="_tc_key" />

    if ((ViewBag.themeExist ?? false) && FileHelper.FileIsExist(_tempFile))
    {
        Html.RenderPartial(_tempFile);
    }
    else
    {
        <!--login-->
        <!--隐藏域避免自动填充表单-->
		<input type="password" hidden/>
		 <div class="fadeInMask"></div>
        <div class="login_content">
        	<div class="bg_saoma"></div>
        	<div class="bg_zhanghao"></div>
            <button class="circle loginClose" data-animation="showShadow" data-remove="3000"></button>

            <!--<form class="login-form">-->
            <div class="loginView">
                <div class="usernametp">
                    <img src="/Content/Images/Theme/username.png" alt="" />
                    <input type="text" id="usernames" placeholder="用户名/手机号"  />
                </div>

                <div class="userpwdbt">
                    <img src="/Content/Images/Theme/pwd.png" alt="" />
                    <input type="password" id="pwd" placeholder="密码" />
                </div>
                <div class="loginbt">
                    <div class="btncontent" id="loginbtn"><img src="/Content/Images/Theme/loginbt_light.png" alt="" /></div>

                    <div class="login_other">
                        <span>忘记密码</span>&nbsp;&nbsp;&nbsp;<span id="register">注册</span>
                    </div>
                </div>
               </div>
                <div class="qr_code pos">



               </div>
                  <p class="scan_code">打开&nbsp;<a href="/Content/0-fashion.html" target="_blank" style="cursor: pointer;font-size:20px"><img src="/Content/Images/Theme/logocol.png" alt="" /></a>&nbsp;扫码</p>
               <div class="triangle">
               	
               </div>
            <!--</form>-->

        </div>
        <!--register-->
        <div class="register_content">
            <button class="circle rigisterClose" data-animation="showShadow" data-remove="3000"></button>
            <div class="logo"><img src="/Content/Images/Theme/registeLogo.png" alt="" /></div>
            <div class="registerContent">
                <span class="registerTitel">会员注册</span>
                <input type="text" id="registerName" placeholder="用户名" />
                <input type="text" id="registerPhone" placeholder="手机号" />
                <div class="verificationBox"><input type="text" id="verification" placeholder="短信验证码" /><button id="getverification">获取验证码</button></div>
                <input type="password" id="setPwd" placeholder="设置密码" />
                <input type="password" id="confirmPwd" placeholder="确认密码" />
                <div class="agreement">点击注册,表示您同意零时尚 《<a>服务协议</a>》 </div>
                <div id="register_confirm">同意协议并注册</div>
            </div>

        </div>

        <script src="/Scripts/default_login.js"></script>
       @Html.Partial("_QrLogin")
    }
}
